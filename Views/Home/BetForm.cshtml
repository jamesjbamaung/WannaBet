<span asp-validation-for="ClosingDate"></span><br>
<form asp-action="AddBet" asp-controller="Home" method="post">

    <label asp-for="Title"></label>
    <input asp-for="Title">
    <br>

    <label asp-for="Description"></label>
    <input asp-for="Description">
    <br>

    <label asp-for="Amount"></label>
    <input asp-for="Amount">
    <br>


    <label asp-for="ClosingDate"></label>
    <input asp-for="ClosingDate" class="selector">
    <br>

