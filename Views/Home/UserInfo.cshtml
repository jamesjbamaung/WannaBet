                        <!-- <h4>Number of Followers: </h4> -->

                        <ul class="list basic_info">
                            <li><a href="#"><i class="lnr lnr-calendar-full"></i>@ViewBag.User.CreatedAt</a></li>
                            <li><a href="#"><i class="lnr lnr-envelope"></i> james@gmail.com</a></li>
                            <li><a href="#"><i class="lnr lnr-home"></i> Chicago IL</a></li>
                        </ul>
                        <ul class="list personal_social">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                    <div class="media-body">

                        <section class="welcome_area p_120">
                            <div class="container">
                                <div class="row welcome_inner">
                                    <div class="col-lg-6">
                                        <div class="welcome_text">
                                            <h4>My Activity</h4>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="wel_item">
                                                        <i class="lnr lnr-database"></i>
                                                        <h4>$2.5K</h4>
                                                        <p>Total Bet Earnings</p>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="wel_item">
                                                        <i class="lnr lnr-book"></i>
                                                        @foreach(var bet in ViewBag.userBets.BetterBets)
                                                        {
                                                        <h4>@bet.Bet.Title</h4>
                                                        <p>@bet.Bet.Description</p>
                                                        }
                                                        <p>Total Bets</p>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="wel_item">
                                                        <i class="lnr lnr-users"></i>
                                                        <h4>@ViewBag.user.listOfFollows.Count</h4>
                                                        <p>Total Followers</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="formforuser">
                                                @{
                                                bool action = false;
                                                int fid = 0;
                                                }
                                                @foreach(var fol in ViewBag.user.listOfFollows)
                                                {


                                                @if(fol.FollowerId == ViewBag.userInSession.UserId)
                                                {
                                                action = true;
                                                fid = fol.FollowId;
                                                }

                                                }
                                                @if(action == false)
                                                {

                                                <button style="background-color: #6382e6;"><a
                                                        href="/addfollow/@ViewBag.userInSession.UserId/@ViewBag.user.UserId">Follow</a></button>
                                                }
                                                @if(action == true)
                                                {
                                                <button style="background: #6382e6;"><a
                                                        href="/unfollow/@fid">UnFollow</a></button>
                                                }
                                            </div>
                                            <div class="sendmessage">
                                                <h1>Send Message</h1>
                                                @model UserMessage

                                                <form asp-action="AddUserMessage" asp-controller="Home" method="post">
                                                    <div class="row">
                                                        <div class="col-sm-12 form-group">
                                                            <label asp-for="Info"></label>
                                                            <input asp-for="Info">
                                                            <br>
                                                            <input type="hidden" name="SenderId"
                                                                value="@ViewBag.userInSession.UserId">
                                                            <input type="hidden" name="ReceiverId"
                                                                value="@ViewBag.user.UserId">
                                                            <input type="submit" value="Post Message"
                                                                style="background:#6382e6; width: 100px;">
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="tools_expert">
                                            <div class="skill_main">
                                                <div class="skill_item">
                                                    <h4>Bets Won <span class="counter">85</span>%</h4>
                                                    <div class="progress_br">
                                                        <div class="progress">
                                                            <div class="progress-bar" role="progressbar"
                                                                aria-valuenow="85" aria-valuemin="0"
                                                                aria-valuemax="100"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="skill_item">
                                                    <h4>Bets Lost <span class="counter">90</span>%</h4>
                                                    <div class="progress_br">
                                                        <div class="progress">
                                                            <div class="progress-bar" role="progressbar"
                                                                aria-valuenow="90" aria-valuemin="0"
                                                                aria-valuemax="100"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="skill_item">
                                                    <h4>Winnings Earned <span class="counter">70</span>%</h4>
                                                    <div class="progress_br">
                                                        <div class="progress">
                                                            <div class="progress-bar" role="progressbar"
                                                                aria-valuenow="70" aria-valuemin="0"
                                                                aria-valuemax="100"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="skill_item">
                                                    <h4>Winnings Lost <span class="counter">95</span>%</h4>
                                                    <div class="progress_br">
                                                        <div class="progress">
                                                            <div class="progress-bar" role="progressbar"
                                                                aria-valuenow="95" aria-valuemin="0"
                                                                aria-valuemax="100"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="skill_item">
                                                    <h4>Time As User <span class="counter">75</span>%</h4>
                                                    <div class="progress_br">
                                                        <div class="progress">
                                                            <div class="progress-bar" role="progressbar"
                                                                aria-valuenow="75" aria-valuemin="0"
                                                                aria-valuemax="100"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

