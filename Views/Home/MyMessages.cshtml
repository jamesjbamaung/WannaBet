<h1>List of my sent messages</h1>
@foreach(var mes in ViewBag.listOfMySentMessages)
{
    <h5>@mes.Info</h5>
    <a href="/deleteusermessage/@mes.UserMessageId">Delete Message</a>
}

<h1>List of my received messages</h1>
@foreach(var rec in ViewBag.listOfMyReceivedMessages)
{
    <h5>@rec.Sender.FirstName</h5>
    <p>@rec.Info</p>
    <a href="/deleteusermessage/@rec.UserMessageId">Delete Message</a>
}